@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Смелите</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Montserrat:400,700|Amatic+SC&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Marck+Script&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Marck+Script&display=swap" rel="stylesheet">
    <!-- AOS CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header>
        <a class="hero-logo" asp-controller="Home" asp-action="Index">
            <img src="~/MainPage/smelitelogo-02.svg" alt="Лого smelite.bg" style="height:42px;margin-right:10px;vertical-align:middle;" />
        </a>
        <nav class="nav" id="main-nav">
            <a asp-controller="Home" asp-action="Index">Начало</a>
            <a asp-controller="Crafts" asp-action="Index">Занаяти</a>
            <a asp-controller="Home" asp-action="Mission">Мисия</a>
            <a asp-controller="Home" asp-action="Merch">Чаршия</a>
            <a asp-controller="Blog" asp-action="Index">Блог</a>
            <a asp-controller="Home" asp-action="Contact">Контакт</a>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
        <button class="burger-btn" id="burger-btn" aria-label="Меню">
            <span></span><span></span><span></span>
        </button>
    </header>


    <!-- Main body content -->
    <main role="main" class="pb-3">
        @await Html.PartialAsync("_Notification")
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-col">
                <div class="footer-title">smelite.bg</div>
                <ul>
                    <li><a asp-controller="Home" asp-action="Mission">Мисия</a></li>
                    <li><a asp-controller="Home" asp-action="About">За нас</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <div class="footer-title">Контакти</div>
                <ul>
                    <li><a href="mailto:hello@smelite.bg">hello@smelite.bg</a></li>
                    <li><a asp-controller="Home" asp-action="Faq">Често задавани въпроси</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">© 2025 smelite.bg. Всички права запазени.</div>
    </footer>


    <!-- AOS JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true,
            offset: 80
        });
    </script>

    <script src="~/js/script.js" asp-append-version="true"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)

    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/framer-motion/dist/framer-motion.umd.js"></script>


</body>
</html>
