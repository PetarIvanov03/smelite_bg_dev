@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Смелите</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Montserrat:400,700|Amatic+SC&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header>
        <a asp-controller="Home" asp-action="Index" class="hero-logo">
            <span class="hero-logo-dot" style="background:#422d15"></span>
            <span class="hero-logo-dot" style="background:#fff"></span>
            <span class="hero-logo-dot" style="background:#c9a04a"></span>
            <span>Смелите</span>
        </a>
        <nav class="nav">
            <a asp-controller="Home" asp-action="Mission">МИСИЯ</a>
            <a asp-controller="Crafts" asp-action="Index">ЗАНАЯТИ</a>
            <a asp-controller="Home" asp-action="Merch">НАШАТА ЧАРШИЯ</a>
            <a asp-controller="Home" asp-action="HowItWorks">КАК РАБОТИ?</a>
            <a asp-controller="Blog" asp-action="Index">БЛОГ</a>
            <a asp-controller="Home" asp-action="Contact">СВЪРЖИ СЕ С НАС</a>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
    </header>

    <!-- Main body content -->
    <main role="main" class="pb-3">
        @await Html.PartialAsync("_Notification")
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-col">
                <div class="footer-title">МЕНЮ</div>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">За нас</a></li>
                    <li><a asp-controller="Home" asp-action="Index">Услуги</a></li>
                    <li><a asp-controller="Home" asp-action="Index">Контакт</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <div class="footer-title">СОЦИАЛНИ МРЕЖИ</div>
                <ul>
                    <li><a href="#">TikTok</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">Youtube</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <div class="footer-title">КОНТАКТИ</div>
                <ul>
                    <li>info@mysite.com</li>
                    <li>123-456-7890</li>
                    <li>500 Terry Francine Street<br>San Francisco, CA 94158</li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <span>
                <a asp-controller="Home" asp-action="TermsAndConditions">Общи условия</a>
                &nbsp; <a asp-controller="Home" asp-action="Privacy">Политика за поверителност</a>
            </span>
            <span class="footer-copyright">
                &copy; 2035 by
            </span>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
