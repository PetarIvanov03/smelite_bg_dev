@model smelite_app.ViewModels.Craft.CraftDetailsViewModel

<h2>@Model.Name</h2>
<p><strong>Type:</strong> @Model.Type</p>
<div>
    @foreach (var img in Model.ImageUrls)
    {
        <img src="@img" alt="@Model.Name" class="img-fluid me-2 mb-2" style="max-width:150px;" />
    }
</div>
<p>@Model.Description</p>
<h4>Available Offerings</h4>
<table class="table">
    <thead>
        <tr>
            <th>Location</th>
            <th>Package</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var o in Model.Offerings)
    {
        <tr>
            <td>@o.Location</td>
            <td>@o.Package</td>
            <td>@o.Price</td>
            <td>
                @if (User.IsInRole("Apprentice"))
                {
                    <form asp-controller="Apprentice" asp-action="Order" method="post">
                        <input type="hidden" name="offeringId" value="@o.Id" />
                        <button type="submit" class="btn btn-sm btn-primary">Order</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="mt-4">
    <h4>Master</h4>
    <img src="@Model.MasterPhotoUrl" alt="@Model.MasterName" class="img-fluid" style="max-width:150px;" />
    <p><strong>@Model.MasterName</strong></p>
    <p>@Model.MasterInfo</p>
</div>
