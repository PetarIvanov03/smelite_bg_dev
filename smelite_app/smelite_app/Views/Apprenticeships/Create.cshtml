@model smelite_app.Models.Apprenticeship
@{
    ViewData["Title"] = "Create Apprenticeship";
    var masters = ViewBag.Masters as List<smelite_app.Models.MasterProfile>;
}
<h1>Create Apprenticeship</h1>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ApprenticeProfileId" />
    <input type="hidden" asp-for="CraftId" />
    <input type="hidden" asp-for="CraftOrderId" />
    <div class="form-group">
        <label asp-for="MasterProfileId">Master</label>
        <select asp-for="MasterProfileId" class="form-control" asp-items="@(new SelectList(masters, "Id", "Id"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="SelectedProps"></label>
        <textarea asp-for="SelectedProps" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
