@model smelite_app.Models.CraftOrder
@{
    ViewData["Title"] = "Create Order";
    var craftOfferings = ViewBag.CraftOfferings as List<smelite_app.Models.CraftOffering>;
    var apprentices = ViewBag.Apprentices as List<smelite_app.Models.ApprenticeProfile>;
}
<h1>Create Order</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ApprenticeProfileId">Apprentice</label>
        <select asp-for="ApprenticeProfileId" class="form-control" asp-items="@(new SelectList(apprentices, "Id", "Id"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="CraftOfferingId">Craft Offering</label>
        <select asp-for="CraftOfferingId" class="form-control" asp-items="@(new SelectList(craftOfferings, "Id", "Id"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalInfo"></label>
        <textarea asp-for="AdditionalInfo" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
