@model smelite_app.ViewModels.Master.MasterIndexViewModel

<form method="get" class="mb-3">
    <div>
        <input type="text" name="search" value="@Model.SearchString" placeholder="Search by name" />
        <select name="craftTypeId">
            <option value="">All crafts</option>
            @foreach (var ct in Model.CraftTypes!)
            {
                <option value="@ct.Value" selected="@(ct.Value == Model.CraftTypeId?.ToString())">@ct.Text</option>
            }
        </select>
        <select name="locationId">
            <option value="">All locations</option>
            @foreach (var l in Model.Locations!)
            {
                <option value="@l.Value" selected="@(l.Value == Model.LocationId?.ToString())">@l.Text</option>
            }
        </select>
        <button type="submit">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Crafts</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var m in Model.Masters)
    {
        <tr>
            <td>@m.Name</td>
            <td>@string.Join(", ", m.Crafts)</td>
            <td><a asp-action="Details" asp-route-id="@m.Id">View</a></td>
        </tr>
    }
    </tbody>
</table>
