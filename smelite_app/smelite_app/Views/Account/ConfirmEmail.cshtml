@{
    ViewData["Title"] = "Потвърди имейл";
}

<div class="auth-card-container">
    <div class="auth-card">
        <div class="auth-icon">
            <svg width="62" height="62" fill="none" viewBox="0 0 62 62">
                <circle cx="31" cy="31" r="31" fill="#C9A04A" />
                <path d="M18 28l13 10 13-10" stroke="#fff" stroke-width="3" fill="none" />
                <rect x="16" y="20" width="30" height="20" rx="4" fill="none" stroke="#fff" stroke-width="3" />
            </svg>
        </div>
        <h2 class="auth-title">Имейлът е потвърден!</h2>
        <p class="auth-msg">
            Вашият имейл беше успешно потвърден.<br />
            Вече можете да влезете в профила си.
        </p>
        <a href="@Url.Action("Login", "Account")" class="btn-main" style="margin-top:22px;min-width:180px;">Вход</a>
    </div>
</div>
