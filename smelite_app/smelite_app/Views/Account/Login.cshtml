@model smelite_app.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<div class="login-page-container">
    <div class="login-card">
        <div class="logo-wrap" style="justify-content:center;">
            <svg width="52" height="52" viewBox="0 0 70 70">
                <circle cx="35" cy="35" r="34" fill="#FFF" stroke="#422D15" stroke-width="3" />
                <circle cx="20" cy="35" r="7" fill="#A3B48B" />
                <circle cx="50" cy="35" r="7" fill="#C9A04A" />
                <circle cx="35" cy="20" r="7" fill="#8B5C2C" />
                <circle cx="35" cy="50" r="7" fill="#422D15" />
            </svg>
            <span class="logo-text" style="font-size:2.1rem">Смелите</span>
        </div>
        <h2 class="login-title">Вход в профила</h2>
        <form asp-action="Login" method="post" class="login-form">
            <input asp-for="Email" class="filter-input" type="email" placeholder="Имейл" required autofocus />
            <input asp-for="Password" class="filter-input" type="password" placeholder="Парола" required />
            <div class="login-options">
                <a asp-action="ForgotPassword" class="login-link">Забравена парола?</a>
            </div>
            <button type="submit" class="btn-main" style="width:100%;">Вход</button>
        </form>
        <div class="login-footer">
            Още нямаш акаунт?
            <a asp-action="Register" class="btn-main-outline login-register-link">Регистрирай се</a>
        </div>
    </div>
</div>

