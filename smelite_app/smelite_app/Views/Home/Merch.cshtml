@{
    ViewData["Title"] = "Мърч";
    Layout = "_Layout";
}

<div class="merch-page-container">
    <h2 class="craft-title" style="text-align:center;">Мърч</h2>

    <div class="merch-desc-card">
        <p class="craft-description" style="text-align:center;">
            <strong>Подкрепи “Смелите” с нашите тениски и суичъри!</strong> Всички приходи подкрепят българските занаяти.
        </p>
    </div>

    <div class="merch-gallery-list">

        <div class="merch-card">
            <img src="~/Merch/hoodie.png" alt="Суичър Смелите" class="merch-img" />
            <div class="merch-info">
                <h3 class="merch-title">Суичър “Смелите”</h3>
                <p class="merch-text">Пастелен цвят, дебел памук, sizes S-XXL</p>
                <p class="merch-price">55.00 EUR</p>
                <a href="https://example.com" class="btn-main-outline merch-btn" target="_blank">Поръчай</a>
            </div>
        </div>

        <div class="merch-card">
            <img src="~/Merch/tshirt.png" alt="Тениска Смелите" class="merch-img" />
            <div class="merch-info">
                <h3 class="merch-title">Тениска “Смелите”</h3>
                <p class="merch-text">Лек памук, унисекс, sizes XS-XXL</p>
                <p class="merch-price">28.00 EUR</p>
                <a href="https://example.com" class="btn-main-outline merch-btn" target="_blank">Поръчай</a>
            </div>
        </div>
    </div>
</div>
