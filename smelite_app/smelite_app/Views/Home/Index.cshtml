    ViewData["Title"] = "Начало";
}
<div class="container-main">
    <div class="glass-card" style="text-align:center;">
        <h1 style="font-size:2.5rem; letter-spacing:2px;">Смелите.bg</h1>
        <p style="font-size:1.2rem; color:var(--text-main); max-width:650px; margin:20px auto;">
