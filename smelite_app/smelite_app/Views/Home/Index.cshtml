@{
    ViewData["Title"] = "Начало";
    Layout = "_Layout";
}

<!-- Hero section -->
<section class="hero">
    <!-- SVG листа -->
    <svg class="decor-leaf leaf-green" width="120" height="80"><ellipse cx="80" cy="80" rx="60" ry="30" fill="#A3B48B" /></svg>
    <svg class="decor-leaf leaf-yellow" width="100" height="80"><ellipse cx="20" cy="60" rx="60" ry="30" fill="#C9A04A" /></svg>
    <div class="hero-content">
        <div class="logo-wrap">
            <svg width="70" height="70" viewBox="0 0 70 70">
                <circle cx="35" cy="35" r="34" fill="#FFF" stroke="#422D15" stroke-width="3" />
                <circle cx="20" cy="35" r="7" fill="#A3B48B" />
                <circle cx="50" cy="35" r="7" fill="#C9A04A" />
                <circle cx="35" cy="20" r="7" fill="#8B5C2C" />
                <circle cx="35" cy="50" r="7" fill="#422D15" />
            </svg>
            <span class="logo-text">Смелите</span>
        </div>
        <h1>Мисията ни е да съхраним българските занаяти</h1>
        <p class="subtitle">Намери майстор. Стани чирак. Подкрепи каузата.</p>
        <a href="#crafts" class="btn-main">Разгледай занаятите <span class="arrow">→</span></a>
    </div>
</section>

<!-- Crafts section -->
<section class="crafts-section" id="crafts">
    <div class="crafts-title">Занаяти</div>
    <div class="crafts-list-scroll">
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/ikn.png" alt="">
            <div class="craft-name">Иконопис</div>
            <div class="craft-desc">Изписване на православни икони по канон.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/dvrb.png" alt="">
            <div class="craft-name">Дърворезба</div>
            <div class="craft-desc">Изкуство на дървените орнаменти и скулптура.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/grn.png" alt="">
            <div class="craft-name">Грънчарство</div>
            <div class="craft-desc">Изработка на съдове от глина.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/gtn.png" alt="">
            <div class="craft-name">Гайтанджийство</div>
            <div class="craft-desc">Изработка на гайтан и тъкани шнурове.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/kmd.png" alt="">
            <div class="craft-name">Куюмджийство</div>
            <div class="craft-desc">Производство на накити и бижута.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/kzh.png" alt="">
            <div class="craft-name">Кожухарство</div>
            <div class="craft-desc">Изработка на кожени изделия и облекла.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/bkr.png" alt="">
            <div class="craft-name">Бакърджийство</div>
            <div class="craft-desc">Изработка на съдове от мед и бакър.</div>
        </a>
        <a class="craft-card" href="/Crafts">
            <img class="craft-img" src="~/Defaults/tkch.png" alt="">
            <div class="craft-name">Тъкачество</div>
            <div class="craft-desc">Изработка на тъкани, килими и гоблени.</div>
        </a>
    </div>
    <div class="crafts-btn-wrap">
        <a href="/Crafts" class="btn-main-outline">Виж всички занаяти</a>
    </div>
</section>

<!-- Sponsors section -->
<section class="sponsors-section">
    <div class="sponsors-title">Нашите спонсори и чорбаджии</div>
    <div class="sponsors-list-scroll">
        <a class="sponsor-card" href="https://eembreque.com" target="_blank" rel="noopener">Eembreque</a>
        <a class="sponsor-card" href="https://datox.ai" target="_blank" rel="noopener">Datox.Ai</a>
        <a class="sponsor-card" href="https://gamarance.com" target="_blank" rel="noopener">Gamarance</a>
        <a class="sponsor-card" href="https://imoge.com" target="_blank" rel="noopener">Imoge</a>
        <a class="sponsor-card" href="https://openai.com" target="_blank" rel="noopener">OpenAI</a>
        <a class="sponsor-card" href="https://github.com" target="_blank" rel="noopener">GitHub</a>
        <a class="sponsor-card" href="https://figma.com" target="_blank" rel="noopener">Figma</a>
    </div>
    <div class="sponsors-btn-wrap">
        <a href="/Home/Merch" class="cta-btn">ПОДКРЕПИ НИ</a>
    </div>
</section>

<!-- Subscribe section -->
<section class="subscribe-section" style="margin-top:40px;text-align:center;">
    <form asp-action="Subscribe" method="post" class="subscribe-form">
        <input type="email" name="email" placeholder="Въведи имейл" class="filter-input" required />
        <button type="submit" class="btn-main">Абонирай се</button>
    </form>
</section>