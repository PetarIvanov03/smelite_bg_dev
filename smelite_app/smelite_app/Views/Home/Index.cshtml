            <tr>
                <th>Занаят</th>
                <th>Име на курс</th>
                <th>Майстор</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-row">
                <td>Грънчарство</td>
                <td>Сърце от глина</td>
                <td>Иван Майстора</td>
                <td><a asp-controller="Crafts" asp-action="Details" asp-route-id="1">Детайли</a></td>
            </tr>
            <tr class="table-row">
                <td>Дърворезба</td>
                <td>Орнаменти</td>
                <td>Мария Резбарова</td>
                <td><a asp-controller="Crafts" asp-action="Details" asp-route-id="2">Детайли</a></td>
            </tr>
        </tbody>
    </table>
</div>