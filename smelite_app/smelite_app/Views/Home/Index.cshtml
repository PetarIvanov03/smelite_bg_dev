@{
    ViewData["Title"] = "Начало";
    Layout = "_Layout";
}

<!-- HERO SECTION -->
<section class="hero-section high-reveal-section">
    <div class="hero-bg-slideshow">
        <div class="hero-bg-img" id="hero-bg-img-current"></div>
        <div class="hero-bg-img" id="hero-bg-img-next"></div>
        <div class="hero-overlay">
            <div class="hero-overlay-inner" data-aos="fade-up">
                <div class="logo-text">smelite.bg</div>
                <div class="hero-talisman">
                    <img src="~/MainPage/telisman.svg" alt="Талисман – бяло цвете" style="height:64px;opacity:0.88;margin-bottom:10px;" />
                </div>
                <h1>Бъди част от занаятчийската традиция</h1>
                <p>Платформа за майстори и чираци – учи, предавай, създавай</p>
            </div>
        </div>
    </div>
</section>

<!-- HIGH секция (Занаяти) -->
<section class="reveal-section high-reveal-section crafts-reveal-section">
    <div class="bg-img crafts-bg-img"></div>
    <div class="infinite-scroll infinite-crafts-scroll" id="infinite-crafts-scroll">
        <a href="/Crafts" class="craft-card" tabindex="0">
            <img class="craft-img" src="~/Defaults/grn.png" alt="Грънчарство">
            <div class="craft-name">Грънчарство</div>
            <div class="craft-desc">Уроци и работилници</div>
        </a>
        <a href="/Crafts" class="craft-card" tabindex="0">
            <img class="craft-img" src="~/Defaults/dvrb.png" alt="Дърворезба">
            <div class="craft-name">Дърворезба</div>
            <div class="craft-desc">Традиционна резба</div>
        </a>
        <a href="/Crafts" class="craft-card" tabindex="0">
            <img class="craft-img" src="~/Defaults/tkch.png" alt="Тъкачество">
            <div class="craft-name">Тъкачество</div>
            <div class="craft-desc">Тъкане с майсторка</div>
        </a>
        <a href="/Crafts" class="craft-card" tabindex="0">
            <img class="craft-img" src="~/Defaults/kzh.png" alt="Кожухарство">
            <div class="craft-name">Кожухарство</div>
            <div class="craft-desc">Изделия от кожа</div>
        </a>
        <!-- добави още занаяти по желание -->
    </div>
    <a href="/Crafts" class="btn-all reveal-btn">Разгледай всички</a>
</section>

<!-- HIGH секция (Чаршия/Bazaar) -->
<section class="reveal-section bazaar-reveal-section">
    <div class="bg-img bazaar-bg-img"></div>
    <div class="bazaar-inner">
        <a href="/Home/Merch" class="btn-all reveal-btn section-bottom-btn">Разгледай чаршията</a>
    </div>
</section>

<!-- HIGH секция (Как работи / How It Works) -->
<section class="reveal-section howitworks-reveal-section">
    <div class="bg-img howitworks-bg-img"></div>
    <div class="howitworks-inner">
        <a href="/Home/HowItWorks" class="btn-all reveal-btn section-bottom-btn">Виж как работи</a>
    </div>
</section>

<!-- LOW секция (декор/фон за спонсори, може да се клонира за ефект) -->
<section class="reveal-section very-low-reveal-section sponsors-reveal-section">
    <div class="bg-img sponsors-bg-img"></div>
</section>

<!-- LOW секция (спонсори) -->
<section class="reveal-section low-reveal-section sponsors-reveal-section">
    <div class="sponsors-content">
        <div class="infinite-scroll infinite-sponsors-scroll" id="infinite-sponsors-scroll">
            <a href="https://www.kaolin.bg/" class="sponsor-card" tabindex="0" target="_blank" rel="noopener">
                <img class="sponsor-img" src="https://yourcdn.com/kaolin-logo.png" alt="Kaolin">
                <div class="sponsor-name">Каолин</div>
                <div class="sponsor-desc">Традиции в минералите</div>
            </a>
            <a href="https://www.fibank.bg/" class="sponsor-card" tabindex="0" target="_blank" rel="noopener">
                <img class="sponsor-img" src="https://yourcdn.com/fibank-logo.png" alt="Fibank">
                <div class="sponsor-name">Fibank</div>
                <div class="sponsor-desc">Твоята банка</div>
            </a>
            <a href="https://www.dev.bg/" class="sponsor-card" tabindex="0" target="_blank" rel="noopener">
                <img class="sponsor-img" src="https://yourcdn.com/devbg-logo.png" alt="DEV.BG">
                <div class="sponsor-name">DEV.BG</div>
                <div class="sponsor-desc">IT общността на България</div>
            </a>
        </div>
        <a href="/Home/Sponsor" class="btn-all reveal-btn">Стани спонсор</a>
    </div>
</section>

<section class="reveal-section very-low-reveal-section sponsors-reveal-section">
    <div class="bg-img sponsors-bg-img"></div>
</section>

<!-- NEWSLETTER / SUBSCRIBE SECTION -->
<section class="low-static-section newsletter-section">
    <div class="bg-img newsletter-bg-img"></div>
    <div class="newsletter-inner">
        <div class="newsletter-logo">
            <img src="~/MainPage/smelitelogo-02.svg" alt="smelite.bg logo" />
        </div>
        <form asp-action="Subscribe" method="post" class="newsletter-form" autocomplete="off">
            <h2>Абонирай се за блога</h2>
            <p>Научи първи за нови истории, занаяти и работилници.</p>
            <div class="newsletter-input-wrap">
                <input type="email" name="email" placeholder="Твоят имейл" required />
                <button type="submit">Абонирай се</button>
            </div>
            <div class="newsletter-success" style="display:none;">Благодарим за абонамента!</div>
        </form>
    </div>
</section>
