@model smelite_app.Models.BlogPost

<h2 class="craft-title" style="text-align:center;margin-bottom:34px;">Delete Blog Post</h2>

<div class="profile-card master-profile-card">
    <h3>@Model.Title</h3>
    <p>@Model.Content</p>
    <p>Are you sure you want to delete this?</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn-main">Delete</button>
    <a asp-action="Index" class="btn-main-outline">Cancel</a>
</form>
